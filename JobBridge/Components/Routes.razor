@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="@typeof(Program).Assembly" 
        AdditionalAssemblies="new[] { 
            typeof(Home).Assembly, 
            typeof(Login).Assembly, 
            typeof(Register).Assembly, 
            typeof(Profile).Assembly, 
            typeof(Settings).Assembly, 
            typeof(Dashboard).Assembly, 
            typeof(JobDetails).Assembly, 
            typeof(JobListings).Assembly, 
            typeof(JobSeekerDashboard).Assembly, 
            typeof(EmployerDashboard).Assembly,
            typeof(JobEdit).Assembly,
            typeof(JobCreate).Assembly,
            typeof(JobManagement).Assembly
        }">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Layout.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(Layout.MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>